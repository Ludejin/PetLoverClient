<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/view_net_error_layout_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_text_load_failed"
        android:src="@drawable/ic_load_failed"
        android:layout_marginTop="67dp"
        android:layout_width="66dp"
        android:layout_height="66dp"/>

    <TextView
        android:id="@+id/textview_load_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/net_error_message"
        android:textColor="#DBD6D3"
        android:textSize="16sp"/>

</LinearLayout>